{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "outDir": "./",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "index.ts",
    "native-bridge.ts"
  ],
  "exclude": [
    "node_modules",
    "*.js",
    "*.d.ts"
  ]
}
